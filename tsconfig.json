{
  "compilerOptions": {
    "composite": true,
    "declaration": true,

    "declarationMap": true,
    "lib": ["DOM", "ES2020"],
    "module": "ES2020",
    "noEmit": false,
    "outDir": "dist/",
    "target": "ES2020",

    "sourceMap": true,
    "sourceRoot": "/debug/source/",
    "mapRoot": "/debug/sourcemaps/",

    "strict": true,
    "baseUrl": "src",
    "rootDir": "src",
    "moduleResolution": "node"
  },

  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
