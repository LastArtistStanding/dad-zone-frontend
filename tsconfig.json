    "composite": true,
    "declaration": true,

    "declarationMap": true,
    "lib": ["DOM", "ES2020"],
    "module": "ES2020",
    "outDir": "dist/",
    "sourceMap": true,
    "target": "ES2020",

    "strict": true,
    "baseUrl": "./src/",
