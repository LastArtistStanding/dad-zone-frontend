{
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.json"
    }
  },
  "moduleFileExtensions": ["js", "ts"],
  "moduleDirectories": ["node_modules", "src"],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "testMatch": [
    "**/test/**/*.test.(ts|js)"
  ],
  "testEnvironment": "node"
}
